<div class="page-header">
  <h1>Lista de Preguntas</h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Nombre</th>
      <th>ResP. 1</th>
      <th>Resp. 2</th>
      <th>Resp. 3</th>
      <th>Resp. 4</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @preguntas.each do |pregunta| %>
      <tr>
        <td><%= pregunta.id %></td>
        <td><%= pregunta.nombre %></td>
        <% if pregunta.respuestas.any? %>
          <% cantidad_respuestas = pregunta.respuestas.count %>
          <% if cantidad_respuestas == 4 %>
            <td><%= pregunta.respuestas[0][:nombre] %></td>
            <td><%= pregunta.respuestas[1][:nombre] %></td>
            <td><%= pregunta.respuestas[2][:nombre] %></td>
            <td><%= pregunta.respuestas[3][:nombre] %></td>
          <%  elsif cantidad_respuestas == 3 %>
            <td><%= pregunta.respuestas[0][:nombre] %></td>
            <td><%= pregunta.respuestas[1][:nombre] %></td>
            <td><%= pregunta.respuestas[2][:nombre] %></td>
            <td></td>
          <%  elsif cantidad_respuestas == 2 %>
            <td><%= pregunta.respuestas[0][:nombre] %></td>
            <td><%= pregunta.respuestas[1][:nombre] %></td>
            <td></td>
            <td></td>
          <%  elsif cantidad_respuestas == 1 %>
            <td><%= pregunta.respuestas[0][:nombre] %></td>
            <td></td>
            <td></td>
            <td></td>
          <% else %>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          <% end %>
        <% else %>
        <% end %>        
        <td>
          <%= link_to 'Ver', pregunta, class: 'btn btn-default btn-sm' %>
          <%= link_to 'Editar', edit_pregunta_path(pregunta), class: 'btn btn-default btn-sm' %>
          <%= link_to 'Eliminar', pregunta, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Pregunta', new_pregunta_path, class: 'btn btn-primary' %>
